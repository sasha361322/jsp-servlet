<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>AssortmentServlet</servlet-name>
        <servlet-class>mypackage.AssortmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssortmentServlet</servlet-name>
        <url-pattern>/assortment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SeriaServlet</servlet-name>
        <servlet-class>mypackage.SeriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeriaServlet</servlet-name>
        <url-pattern>/seria</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WorksServlet</servlet-name>
        <servlet-class>mypackage.WorksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorksServlet</servlet-name>
        <url-pattern>/works</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
</web-app>